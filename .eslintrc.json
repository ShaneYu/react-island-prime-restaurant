{
  "root": true,
  "extends": ["airbnb-typescript-prettier"],
  "env": {
    "jest": true
  },
  "rules": {
    "global-require": "off",
    "import/no-dynamic-require": "off",
    "max-len": ["error", { "code": 170, "ignoreUrls": true, "tabWidth": 2 }],
    "func-names": ["error", "always", { "generators": "as-needed" }]
  }
}
